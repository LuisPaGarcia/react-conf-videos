{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "rules": {
    "strict": 0,
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "semi": ["error", "never"],
    "comma-dangle": "off",
    "react/prop-types": 0,
    "import/prefer-default-export": 0,
    "function-paren-newline": 0,
    "no-underscore-dangle": 0,
    "no-unused-vars": 0,
    "curly": 0,
    "no-multi-spaces": 0,
    "key-spacing": 0,
    "no-return-assign": 0,
    "consistent-return": 0,
    "no-shadow": 0,
    "no-comma-dangle": 0,
    "no-use-before-define": 0,
    "no-empty": 0,
    "new-parens": 0,
    "no-cond-assign": 0,
    "quotes": [2, "single", "avoid-escape"],
    "camelcase": 0,
    "new-cap": [1, { "capIsNew": false }],
    "no-undef": 2,
    "no-confusing-arrow" : 0
  },
  "env": {
    "es6": true,
    "browser": true // so eslint knows what document/window is
  },
  "settings" : {
    "import/resolver": {
      "node": {
        "paths": ["src"] // required so no linting errors when using absolute paths with config from webpack
      }
    }
  }
}