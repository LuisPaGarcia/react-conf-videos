
{
  "rootDir": "../../",
  "globals": {
    "ts-jest": {
      "useBabelrc": true
    }
  },
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "setupFiles": ["<rootDir>/config/test/setupEnzyme.ts"],
  "moduleNameMapper": {
      "\\.(scss)$": "<rootDir>/config/test/identityProxy.ts"
  },
  "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
  "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
  ]
}