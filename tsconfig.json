{
  "compilerOptions": {
    "baseUrl": "./",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "strict": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "sourceMap": true,       
    "strictNullChecks": true,   
    "target": "es6",
    "allowJs": true,            
    "moduleResolution": "node",
    "paths": {
      "*": ["src/*", "public/*", "*"]
    }
  },
  "exclude": ["dist", "build", "node_modules"]
}
